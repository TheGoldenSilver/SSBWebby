@{
    ViewData["Title"] = "Sales and Marketing Courses";
}

<div class="signup-section">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-10">
                <div class="signup-form">
                    <nav aria-label="breadcrumb" class="mb-4">
                        <ol class="breadcrumb mb-0">
                            <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index" class="text-white">Courses</a></li>
                            <li class="breadcrumb-item active text-white" aria-current="page">Sales and Marketing</li>
                        </ol>
                    </nav>

                    <div class="row align-items-center">
                        <div class="col-md-4 text-center">
                            <div class="rounded-circle bg-primary bg-opacity-25 p-4 mb-3 mx-auto" style="width: 150px; height: 150px; display: flex; align-items: center; justify-content: center;">
                                <i class="fas fa-chart-line fa-4x text-white"></i>
                            </div>
                        </div>
                        <div class="col-md-8">
                            <h1 class="section-title text-start mb-3 text-white">Sales and Marketing</h1>
                            <div class="badge bg-primary mb-3 px-3 py-2">Sales and Marketing Department</div>
                            <p class="lead text-white">Comprehensive sales and marketing courses designed to help you develop effective strategies and techniques for business growth.</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-10">
            <div class="row">
                <div class="col-md-8">
                    <div class="signup-form mb-4">
                        <h2 class="section-title text-start h3 mb-4 text-white">About Our Sales and Marketing Courses</h2>
                        <p class="mb-4 text-white">Our Sales and Marketing courses are designed to provide you with the skills and knowledge needed to excel in today's competitive business environment. Whether you're a sales professional or a marketing specialist, our courses cover essential topics:</p>
                        
                        <div class="course-list">
                            <div class="course-item p-4 mb-3 bg-dark bg-opacity-25 rounded-3 shadow-sm border border-light border-opacity-10">
                                <div class="d-flex justify-content-between align-items-start mb-2">
                                    <h5 class="mb-0 fw-bold text-white">Sales Mastery</h5>
                                    <span class="badge bg-primary">3 months</span>
                                </div>
                                <p class="mb-2 text-white">Master the art of selling and advanced sales techniques.</p>
                                <div class="d-flex gap-2">
                                    <span class="badge bg-primary bg-opacity-25 text-white">Prospecting</span>
                                    <span class="badge bg-primary bg-opacity-25 text-white">Negotiation</span>
                                    <span class="badge bg-primary bg-opacity-25 text-white">Closing</span>
                                </div>
                            </div>

                            <div class="course-item p-4 mb-3 bg-dark bg-opacity-25 rounded-3 shadow-sm border border-light border-opacity-10">
                                <div class="d-flex justify-content-between align-items-start mb-2">
                                    <h5 class="mb-0 fw-bold text-white">Digital Marketing</h5>
                                    <span class="badge bg-primary">4 months</span>
                                </div>
                                <p class="mb-2 text-white">Learn comprehensive digital marketing strategies and tools.</p>
                                <div class="d-flex gap-2">
                                    <span class="badge bg-primary bg-opacity-25 text-white">SEO</span>
                                    <span class="badge bg-primary bg-opacity-25 text-white">Social Media</span>
                                    <span class="badge bg-primary bg-opacity-25 text-white">Content Marketing</span>
                                </div>
                            </div>

                            <div class="course-item p-4 mb-3 bg-dark bg-opacity-25 rounded-3 shadow-sm border border-light border-opacity-10">
                                <div class="d-flex justify-content-between align-items-start mb-2">
                                    <h5 class="mb-0 fw-bold text-white">Marketing Analytics</h5>
                                    <span class="badge bg-primary">3 months</span>
                                </div>
                                <p class="mb-2 text-white">Master data-driven marketing strategies and analysis.</p>
                                <div class="d-flex gap-2">
                                    <span class="badge bg-primary bg-opacity-25 text-white">Data Analysis</span>
                                    <span class="badge bg-primary bg-opacity-25 text-white">Market Research</span>
                                    <span class="badge bg-primary bg-opacity-25 text-white">ROI Tracking</span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="col-md-4">
                    <div class="signup-form mb-4">
                        <h3 class="section-title text-start h4 mb-4 text-white">Course Benefits</h3>
                        <ul class="benefit-list list-unstyled">
                            <li class="d-flex align-items-center mb-3">
                                <i class="fas fa-check-circle text-white me-2"></i>
                                <span class="text-white">Industry certification</span>
                            </li>
                            <li class="d-flex align-items-center mb-3">
                                <i class="fas fa-check-circle text-white me-2"></i>
                                <span class="text-white">Real-world projects</span>
                            </li>
                            <li class="d-flex align-items-center mb-3">
                                <i class="fas fa-check-circle text-white me-2"></i>
                                <span class="text-white">Expert instructors</span>
                            </li>
                            <li class="d-flex align-items-center mb-3">
                                <i class="fas fa-check-circle text-white me-2"></i>
                                <span class="text-white">Career support</span>
                            </li>
                            <li class="d-flex align-items-center mb-3">
                                <i class="fas fa-check-circle text-white me-2"></i>
                                <span class="text-white">Networking opportunities</span>
                            </li>
                        </ul>
                    </div>

                    <div class="signup-form text-center">
                        <h3 class="section-title h4 mb-3 text-white">Get Started</h3>
                        <p class="text-white mb-4">Ready to boost your sales and marketing career? Enroll now and master the skills that drive business growth.</p>
                        <a href="#" class="btn btn-primary w-100 py-3">Enroll Now</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
