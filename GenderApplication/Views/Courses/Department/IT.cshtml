@{
    ViewData["Title"] = "Information Technology Courses";
}

<div class="signup-section">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-10">
                <div class="signup-form">
                    <nav aria-label="breadcrumb" class="mb-4">
                        <ol class="breadcrumb mb-0">
                            <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index" class="text-white">Courses</a></li>
                            <li class="breadcrumb-item active text-white" aria-current="page">Information Technology</li>
                        </ol>
                    </nav>

                    <div class="row align-items-center">
                        <div class="col-md-4 text-center">
                            <div class="rounded-circle bg-primary bg-opacity-25 p-4 mb-3 mx-auto" style="width: 150px; height: 150px; display: flex; align-items: center; justify-content: center;">
                                <i class="fas fa-laptop-code fa-4x text-white"></i>
                            </div>
                        </div>
                        <div class="col-md-8">
                            <h1 class="section-title text-start mb-3 text-white">Information Technology</h1>
                            <div class="badge bg-primary mb-3 px-3 py-2">IT Department</div>
                            <p class="lead text-white">Comprehensive IT courses designed to equip you with the skills needed in today's digital world.</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-10">
            <div class="row">
                <div class="col-md-8">
                    <div class="signup-form mb-4">
                        <h2 class="section-title text-start h3 mb-4 text-white">About Our IT Courses</h2>
                        <p class="mb-4 text-white">Our Information Technology courses are designed to provide you with a solid foundation in computer science and practical IT skills. Whether you're a beginner or looking to advance your career, our courses cover a wide range of topics:</p>
                        
                        <div class="course-list">
                            <div class="course-item p-4 mb-3 bg-dark bg-opacity-25 rounded-3 shadow-sm border border-light border-opacity-10">
                                <div class="d-flex justify-content-between align-items-start mb-2">
                                    <h5 class="mb-0 fw-bold text-white">Web Development</h5>
                                    <span class="badge bg-primary">3 months</span>
                                </div>
                                <p class="mb-2 text-white">Learn modern web development technologies and frameworks.</p>
                                <div class="d-flex gap-2">
                                    <span class="badge bg-primary bg-opacity-25 text-white">HTML</span>
                                    <span class="badge bg-primary bg-opacity-25 text-white">CSS</span>
                                    <span class="badge bg-primary bg-opacity-25 text-white">JavaScript</span>
                                    <span class="badge bg-primary bg-opacity-25 text-white">React</span>
                                </div>
                            </div>

                            <div class="course-item p-4 mb-3 bg-dark bg-opacity-25 rounded-3 shadow-sm border border-light border-opacity-10">
                                <div class="d-flex justify-content-between align-items-start mb-2">
                                    <h5 class="mb-0 fw-bold text-white">Database Management</h5>
                                    <span class="badge bg-primary">2 months</span>
                                </div>
                                <p class="mb-2 text-white">Master database design, implementation, and optimization.</p>
                                <div class="d-flex gap-2">
                                    <span class="badge bg-primary bg-opacity-25 text-white">SQL</span>
                                    <span class="badge bg-primary bg-opacity-25 text-white">MongoDB</span>
                                    <span class="badge bg-primary bg-opacity-25 text-white">Database Design</span>
                                </div>
                            </div>

                            <div class="course-item p-4 mb-3 bg-dark bg-opacity-25 rounded-3 shadow-sm border border-light border-opacity-10">
                                <div class="d-flex justify-content-between align-items-start mb-2">
                                    <h5 class="mb-0 fw-bold text-white">Network Security</h5>
                                    <span class="badge bg-primary">4 months</span>
                                </div>
                                <p class="mb-2 text-white">Learn to protect networks and systems from cyber threats.</p>
                                <div class="d-flex gap-2">
                                    <span class="badge bg-primary bg-opacity-25 text-white">Security Protocols</span>
                                    <span class="badge bg-primary bg-opacity-25 text-white">Firewalls</span>
                                    <span class="badge bg-primary bg-opacity-25 text-white">Encryption</span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="col-md-4">
                    <div class="signup-form mb-4">
                        <h3 class="section-title text-start h4 mb-4 text-white">Course Benefits</h3>
                        <ul class="benefit-list list-unstyled">
                            <li class="d-flex align-items-center mb-3">
                                <i class="fas fa-check-circle text-white me-2"></i>
                                <span class="text-white">Industry-relevant curriculum</span>
                            </li>
                            <li class="d-flex align-items-center mb-3">
                                <i class="fas fa-check-circle text-white me-2"></i>
                                <span class="text-white">Hands-on practical training</span>
                            </li>
                            <li class="d-flex align-items-center mb-3">
                                <i class="fas fa-check-circle text-white me-2"></i>
                                <span class="text-white">Expert instructors</span>
                            </li>
                            <li class="d-flex align-items-center mb-3">
                                <i class="fas fa-check-circle text-white me-2"></i>
                                <span class="text-white">Job placement assistance</span>
                            </li>
                            <li class="d-flex align-items-center mb-3">
                                <i class="fas fa-check-circle text-white me-2"></i>
                                <span class="text-white">Flexible learning schedule</span>
                            </li>
                        </ul>
                    </div>

                    <div class="signup-form text-center">
                        <h3 class="section-title h4 mb-3 text-white">Get Started</h3>
                        <p class="text-white mb-4">Ready to begin your IT journey? Enroll now and take the first step towards your tech career.</p>
                        <a href="#" class="btn btn-primary w-100 py-3">Enroll Now</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <style>
        .card {
            border: none;
            transition: transform 0.2s;
        }
        .card:hover {
            transform: translateY(-5px);
        }
        .badge {
            font-size: 1rem;
            padding: 0.5rem 1rem;
        }
        .course-description {
            font-size: 1.1rem;
            line-height: 1.6;
            color: #444;
        }
        .card-title {
            color: #2c3e50;
            font-weight: 600;
        }
        .list-group-item {
            border: none;
            padding: 0.75rem 0;
        }
    </style>
}
