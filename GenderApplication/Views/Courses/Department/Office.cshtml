@{
    ViewData["Title"] = "Office Management Courses";
}

<div class="signup-section">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-10">
                <div class="signup-form">
                    <nav aria-label="breadcrumb" class="mb-4">
                        <ol class="breadcrumb mb-0">
                            <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index" class="text-white">Courses</a></li>
                            <li class="breadcrumb-item active text-white" aria-current="page">Office Management</li>
                        </ol>
                    </nav>

                    <div class="row align-items-center">
                        <div class="col-md-4 text-center">
                            <div class="rounded-circle bg-primary bg-opacity-25 p-4 mb-3 mx-auto" style="width: 150px; height: 150px; display: flex; align-items: center; justify-content: center;">
                                <i class="fas fa-briefcase fa-4x text-white"></i>
                            </div>
                        </div>
                        <div class="col-md-8">
                            <h1 class="section-title text-start mb-3 text-white">Office Management</h1>
                            <div class="badge bg-primary mb-3 px-3 py-2">Office Management Department</div>
                            <p class="lead text-white">Comprehensive office management courses designed to equip you with essential administrative and organizational skills.</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-10">
            <div class="row">
                <div class="col-md-8">
                    <div class="signup-form mb-4">
                        <h2 class="section-title text-start h3 mb-4 text-white">About Our Office Management Courses</h2>
                        <p class="mb-4 text-white">Our office management courses are designed to provide you with comprehensive knowledge and practical skills in modern office administration. Whether you're starting your career or looking to advance to a managerial position, our courses cover essential topics:</p>
                        
                        <div class="course-list">
                            <div class="course-item p-4 mb-3 bg-dark bg-opacity-25 rounded-3 shadow-sm border border-light border-opacity-10">
                                <div class="d-flex justify-content-between align-items-start mb-2">
                                    <h5 class="mb-0 fw-bold text-white">Administrative Management</h5>
                                    <span class="badge bg-primary">3 months</span>
                                </div>
                                <p class="mb-2 text-white">Master essential office administration and management skills.</p>
                                <div class="d-flex gap-2">
                                    <span class="badge bg-primary bg-opacity-25 text-white">Office Systems</span>
                                    <span class="badge bg-primary bg-opacity-25 text-white">Document Management</span>
                                    <span class="badge bg-primary bg-opacity-25 text-white">Communication</span>
                                </div>
                            </div>

                            <div class="course-item p-4 mb-3 bg-dark bg-opacity-25 rounded-3 shadow-sm border border-light border-opacity-10">
                                <div class="d-flex justify-content-between align-items-start mb-2">
                                    <h5 class="mb-0 fw-bold text-white">Business Operations</h5>
                                    <span class="badge bg-primary">2 months</span>
                                </div>
                                <p class="mb-2 text-white">Learn to manage and optimize business operations effectively.</p>
                                <div class="d-flex gap-2">
                                    <span class="badge bg-primary bg-opacity-25 text-white">Process Management</span>
                                    <span class="badge bg-primary bg-opacity-25 text-white">Resource Planning</span>
                                    <span class="badge bg-primary bg-opacity-25 text-white">Efficiency</span>
                                </div>
                            </div>

                            <div class="course-item p-4 mb-3 bg-dark bg-opacity-25 rounded-3 shadow-sm border border-light border-opacity-10">
                                <div class="d-flex justify-content-between align-items-start mb-2">
                                    <h5 class="mb-0 fw-bold text-white">HR Management</h5>
                                    <span class="badge bg-primary">4 months</span>
                                </div>
                                <p class="mb-2 text-white">Develop skills in human resource management and employee relations.</p>
                                <div class="d-flex gap-2">
                                    <span class="badge bg-primary bg-opacity-25 text-white">Recruitment</span>
                                    <span class="badge bg-primary bg-opacity-25 text-white">Training</span>
                                    <span class="badge bg-primary bg-opacity-25 text-white">Employee Relations</span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="col-md-4">
                    <div class="signup-form mb-4">
                        <h3 class="section-title text-start h4 mb-4 text-white">Course Benefits</h3>
                        <ul class="benefit-list list-unstyled">
                            <li class="d-flex align-items-center mb-3">
                                <i class="fas fa-check-circle text-white me-2"></i>
                                <span class="text-white">Professional certification</span>
                            </li>
                            <li class="d-flex align-items-center mb-3">
                                <i class="fas fa-check-circle text-white me-2"></i>
                                <span class="text-white">Practical case studies</span>
                            </li>
                            <li class="d-flex align-items-center mb-3">
                                <i class="fas fa-check-circle text-white me-2"></i>
                                <span class="text-white">Industry expert mentors</span>
                            </li>
                            <li class="d-flex align-items-center mb-3">
                                <i class="fas fa-check-circle text-white me-2"></i>
                                <span class="text-white">Career guidance</span>
                            </li>
                            <li class="d-flex align-items-center mb-3">
                                <i class="fas fa-check-circle text-white me-2"></i>
                                <span class="text-white">Flexible scheduling</span>
                            </li>
                        </ul>
                    </div>

                    <div class="signup-form text-center">
                        <h3 class="section-title h4 mb-3 text-white">Get Started</h3>
                        <p class="text-white mb-4">Ready to advance your office management career? Enroll now and develop essential skills for success.</p>
                        <a href="#" class="btn btn-primary w-100 py-3">Enroll Now</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
