@{
    ViewData["Title"] = "Forgot Password";
}

<div class="container mt-5 pt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow">
                <div class="card-body p-5">
                    <div class="text-center mb-4">
                        <img src="~/image/n-logo.png" alt="SkillSandbox Logo" class="mb-3" style="max-width: 100px;">
                        <h2 class="fw-bold">Reset Your Password</h2>
                        <p class="text-muted">Enter your email address and we'll send you instructions to reset your password</p>
                    </div>

                    @if (!string.IsNullOrEmpty(ViewData["ErrorMessage"] as string))
                    {
                        <div class="alert alert-danger" role="alert">
                            @ViewData["ErrorMessage"]
                        </div>
                    }

                    @if (!string.IsNullOrEmpty(ViewData["SuccessMessage"] as string))
                    {
                        <div class="alert alert-success" role="alert">
                            @ViewData["SuccessMessage"]
                        </div>
                    }

                    <form asp-action="ForgotPassword" method="post">
                        <div class="mb-3">
                            <label for="email" class="form-label">Email address</label>
                            <input type="email" class="form-control" id="email" name="email" required>
                        </div>
                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-primary btn-lg">Send Reset Link</button>
                        </div>
                    </form>

                    <hr class="my-4">

                    <div class="text-center">
                        <p class="mb-0">Remember your password? <a asp-action="Login" class="text-decoration-none">Back to Login</a></p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <style>
        .card {
            border: none;
            border-radius: 10px;
        }
        .btn-primary {
            background-color: #0d6efd;
            border-color: #0d6efd;
        }
        .btn-primary:hover {
            background-color: #0b5ed7;
            border-color: #0a58ca;
        }
    </style>
} 